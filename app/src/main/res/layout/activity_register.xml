<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#00007f"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:text="Registro de usuarios"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:foregroundGravity="center_horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70ffffff"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_horizontal"
            android:orientation="vertical"
            android:padding="32dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:id="@+id/documento_estudiante"
                android:background="#fff"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="@string/documento"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/id"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/nombre_studiante"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="#fff"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="Nombre"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/id"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/apellido_etudiante"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="#fff"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="Apellido"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/id"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/fecha_nacimiento_estudiante"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="#fff"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="Fecha de Nacimiento"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/ic_launcher"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/nombre_acudiente"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="#fff"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="Nombre de acudiente"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/id"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/id_grado"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="#fff"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="Grado"
                android:textColor=" #808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/id"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/contrase単a_estudiante"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:inputType="textPassword"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="Contrase単a"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/pass_round"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/confirmar_contrase単a"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:inputType="textPassword"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="Confirmar Contrase単a"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/pass_round"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="30dp"
                android:background="#5000007f"
                android:text="Guardar"
                android:textColor="#fff"
                android:typeface="sans"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
