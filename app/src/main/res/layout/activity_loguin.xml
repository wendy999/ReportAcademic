<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00007f"
    android:orientation="vertical"
    tools:context="com.example.sena.reportacademic.LoguinActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="120dp"
        android:gravity="center_horizontal"
        android:layout_marginVertical="100dp"
        android:background="#00007f"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:src="@drawable/logo1"
            android:foregroundGravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReportAcademic"
            android:textColor="#ffff"
            android:textSize="46sp"
            android:paddingTop="170dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/user"
            android:foregroundGravity="center"
            android:layout_marginTop="250dp"
             />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingTop="250dp"
        android:foregroundGravity="center_horizontal"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70ffffff"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_horizontal"
            android:orientation="vertical"
            android:padding="32dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:background="#fff"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="@string/documento"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/id"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:inputType="textPassword"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:hint="ContraseÃ±a"
                android:textColor="#808080"
                android:textSize="22dp"
                android:drawableLeft="@mipmap/pass_round"

                />

            <Button
                android:layout_width="354dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="30dp"
                android:background="#5000007f"
                android:onClick="onClick"
                android:text="Loguin"
                android:textColor="#fff"
                android:typeface="sans"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"
                android:padding="6dp"
                android:paddingLeft="40dp"
                android:text="Crear cuenta"
                android:textColor="#FFF"
                android:textSize="12dp"
                android:onClick="CrearCuenta"/>

        </LinearLayout>

    </ScrollView>





</android.support.constraint.ConstraintLayout>